{{#if @visible}}
  <LinkTo
    @query={{hash currentPage=@page}}
    class={{@class}}
    data-test-pager={{@test}}
    aria-label={{@label}}
    {{(modifier
      this.includeKeyboardNav
      label=(if (eq @label "Next page") "Next Page" "Previous Page")
      action=this.gotoRoute
      pattern=(if (eq @label "Next page") (array "]" "]") (array "[" "["))
    )}}
  >
    {{yield}}
  </LinkTo>
{{/if}}