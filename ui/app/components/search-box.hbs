<div class="search-box field has-addons" ...attributes>
  <div class="control">
    <span class="prefix-icon"><Hds::Icon @name="search" /></span>
    <input
      class="input {{@inputClass}}"
      type="text"
      placeholder={{@placeholder}}
      aria-label={{@placeholder}}
      value={{this._searchTerm}}
      {{on "input" this.setSearchTerm}}
      size="1">
    <button class="suffix-icon" {{on "click" this.clear}} type="button" title="Clear search"><Hds::Icon @name="x" /></button>
  </div>
</div>
