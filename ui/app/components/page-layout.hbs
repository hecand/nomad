<div class="page-layout" ...attributes>
  <GlobalHeader
    class="page-header"
    @onHamburgerClick={{fn (mut this.isGutterOpen) true}}>
    <AppBreadcrumbs />
  </GlobalHeader>
  <GutterMenu
    @class="page-body"
    @isOpen={{this.isGutterOpen}}
    @onHamburgerClick={{fn (mut this.isGutterOpen) false}}>
    {{yield}}
  </GutterMenu>
</div>
