<li data-test-breadcrumb-default
  {{(modifier
    this.maybeKeyboardShortcut
    label="Go up a level"
    pattern=(array "u")
    menuLevel=true
    action=this.traverseUpALevel
    exclusive=true
  )}}
>
  <LinkTo
    @route={{this.route}}
    @models={{this.models}}
    data-test-breadcrumb={{this.route}}>
    {{#if @crumb.title}}
      <dl>
        <dt>
          {{@crumb.title}}
        </dt>
        <dd>
          {{@crumb.label}}
        </dd>
      </dl>
    {{else}}
      {{@crumb.label}}
    {{/if}}
  </LinkTo>
</li>