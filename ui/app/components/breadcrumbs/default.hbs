{{! template-lint-disable no-unknown-arguments-for-builtin-components }}
<li
  data-test-breadcrumb-default
  {{(modifier
    this.maybeKeyboardShortcut
    label="Go up a level"
    pattern=(array "u")
    menuLevel=true
    action=(action this.traverseUpALevel @route @params @query @model)
    exclusive=true
  )}}
  ...attributes
>

  <LinkTo
    @route={{@crumb.route}}
    @params={{@crumb.params}}
    @query={{@crumb.query}}
    @model={{@crumb.model}}
    data-test-breadcrumb={{@crumb.route}}
  >
    {{#if @crumb.title}}
      <dl>
        <dt>
          {{@title}}
        </dt>
        <dd>
          {{@crumb.label}}
        </dd>
      </dl>
    {{else}}
      {{@crumb.label}}
    {{/if}}
  </LinkTo>
</li>