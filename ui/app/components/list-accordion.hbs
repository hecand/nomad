<div class="accordion" ...attributes>
{{#each this.decoratedSource as |item|}}
{{yield (hash
    head=(component "list-accordion/accordion-head"
      isOpen=item.isOpen
      onOpen=(queue
        (fn (mut item.isOpen) true)
        (fn this.handleToggle item.item item.isOpen)
      )
      onClose=(queue
        (fn (mut item.isOpen) false)
        (fn this.handleToggle item.item item.isOpen)
      )
    )
    body=(component "list-accordion/accordion-body" isOpen=item.isOpen)
    item=item.item
    isOpen=item.isOpen
    close=(fn (mut item.isOpen) false)
  )}}
{{/each}}
</div>
